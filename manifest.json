{
  "name": "HTPC Manager",
  "id": "htpc-manager",
  "description": {
    "en": "Manage your HTPC from anywhere",
    "fr": "Piloter votre HTPC o√π vous souhaitez"
  },
  "url": "http://htpc.io",
  "license": "GPL-3",
  "maintainer": {
    "name": "scith, Snipees",
    "url": "https://github.com/scith/"
  },
  "multi_instance": "false",
  "services": [
        "python"
    ],
  "arguments": {
    "install": [
      {
        "name": "domain",
        "ask": {
          "en": "Choose a domain for HTPC Manager",
          "fr": "Choisissez un domaine pour HTPC Manager"
        },
        "example": "domain.org"
      },
      {
        "name": "path",
        "ask": {
          "en": "Choose a path for HTPC Manager",
          "fr": "Choisissez un chemin pour HTPC Manager"
        },
        "example": "/htpc",
        "default": "/htpc"
      }
  }
}
